Config { font = "xft:Dejavu Sans Mono-9:book"
       , bgColor = "black"
       , fgColor = "grey"
       , position = TopW L 90
       , lowerOnStart = True
       , commands = [ Run Cpu ["-L","3","-H","50","--normal","green","--high","red"] 60
                    , Run Memory ["-t","Mem: <usedratio>%"] 60
                    , Run Swap [] 60
                    , Run Date "%a %b %_d %l:%M" "date" 60
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ %cpu% | %memory% * %swap%    <fc=#ee9a00>%date%</fc>"
       }
