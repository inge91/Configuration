Config { font = "xft:Terminus:size=12"
       , bgColor = "#000000"
       , fgColor = "#ffffff"
       , position = Top
       , commands = [ Run Cpu ["-L","3","-H","50","--normal","green","--high","red"] 10
                    , Run Memory ["-t","Mem: <usedratio>%"] 10
                    , Run Swap [] 10
                    , Run Com "uname" ["-s","-r"] "" 36000
                    , Run Date "%a %b %_d %Y %H:%M" "date" 10
                    , Run StdinReader
                    , Run Com "cmus-remote -C status | grep ^stream | cut -d' ' -f2-" [] "cmus" 100
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ %cpu% | %memory% * %swap%   Now playing: <fc=#7DC1CF>%cmus%</fc>   <fc=#A0CF5D>%date%</fc>"
       }
