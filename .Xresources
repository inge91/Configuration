! Xft font settings
Xft.autohint: 0
Xft.lcdfilter: lcddefault
Xft.hintstyle: hintslight
Xft.hinting: 1
Xft.antialias: 1
Xft.dpi: 96
Xft.rgba: rgb

! urxvt settings
URxvt*termName:rxvt-256color
URxvt*loginShell:true
URxvt.scrollBar: false
URxvt*scrollTtyOutput:      false
URxvt*scrollWithBuffer:     true
URxvt*scrollTtyKeypress:    true
URxvt.depth: 32
URxvt.saveLines: 50000
URxvt.urgentOnBell: true
URxvt.font:xft:Dina-11

! xterm settings
xterm*termName: xterm-256color
xterm*faceName: Dina:size=11

! [ terminal colors ]
!   black / dark gray
*color0: #4D4D4D
*color8: #9E9E9E
!   red
*color1: #725631
*color9: #AC885B
!   green
*color2: #5F6C3F
*color10: #8F9D6A
!   yellow
*color3: #757575
*color11: #B8B8B8
!   blue
*color4: #39598E
*color12: #7587A6
!   magenta
*color5: #713B71
*color13: #9B859D
!   cyan
*color6: #404040
*color14: #404040
!   light gray / white
*color7: #B8B8B8
*color15: #757575

! [ urxvt ]
*background: #141414
*foreground: #F8F8F8
*cursorColor: #404040
